<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_us_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ngsm.com.mycollege.ContactUsActivity"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <TextView
        android:text="Contact Us"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="25dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:text="Admission Office No :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:onClick="onCall"
                android:text="7259980952"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_row="0"
                android:layout_column="1"
                android:paddingLeft="10dp"
                android:id="@+id/tvAdmissionNO"/>

            <TextView
                android:gravity="right"
                android:text="Pricipal Office No :"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_row="1"
                android:layout_column="0"
                android:paddingTop="10dp"/>

            <TextView
                android:onClick="onDail"
                android:text="9573421252"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_row="1"
                android:layout_column="1"
                android:paddingLeft="10dp"
                android:id="@+id/tvPrincipalNO"/>

            <TextView
                android:gravity="right"
                android:text="Visit us at :"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_row="2"
                android:layout_column="0"
                android:paddingTop="10dp"/>

            <TextView
                android:onClick="visitWebsite"
                android:text="svuniversity.ac.in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_row="2"
                android:layout_column="1"
                android:paddingLeft="10dp"/>

        </GridLayout>
    </LinearLayout>

</LinearLayout>
